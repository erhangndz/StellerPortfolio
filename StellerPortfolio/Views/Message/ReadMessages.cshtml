@model List<StellerPortfolio.Models.TblMessage>
@{
    ViewBag.Title = "ReadMessages";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h3>Okunan Mesajlar</h3>

<a class="btn btn-outline-dark" href="/Message/Index">Okunmayan Mesajlar</a>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Gönderen Ad Soyad</th>
        <th>Gönderen Email </th>
        <th>Sil</th>
   
        <th>Mesajı Aç</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.NameSurname</td>
            <td>@item.Email</td>
            <td><a href="/Message/DeleteMessage/@item.MessageId" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Message/MessageDetail/@item.MessageId" class="btn btn-outline-primary">Mesajı Aç</a></td>
        </tr>
    }
</table>